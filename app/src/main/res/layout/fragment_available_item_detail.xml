<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/available_item_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        tools:text="Item Name"/>
    <TextView
        android:id="@+id/available_item_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        tools:text="This a a sample description"/>
    <TextView
        android:id="@+id/available_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:text="Lorem ipsum dolor sit amet, vis id dolor quaerendum reformidans, ut vis invidunt probatus disputationi, mel et doctus voluptua. Dolore utamur platonem an ius. Has ullum appellantur cu, eum quod cotidieque te, movet oporteat tincidunt vix at. Ius noster ocurreret democritum in, cu ipsum tantas salutatus vis. Ullum integre tacimates ei per, mei eruditi voluptatibus ei. Suscipit officiis pericula no eum. Usu quot oratio ut, cibo brute ad duo."/>
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/propose_trade_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_propose_trade_text"
        />

</LinearLayout>